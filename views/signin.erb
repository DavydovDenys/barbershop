<form action="/signin" method="post">
  
  <div class="form-group">
    <label>Ваше имя</label>
    <input name="name" type="text" class="form-control" placeholder="введите имя" value="<%= @name %>">
  </div>
  
  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" placeholder="введите телефон" value="<%= @phone %>">
  </div>

  <div class="form-group">
    <label>Когда вас ждать</label>
    <input name="datetime" type="text" class="form-control" placeholder="введите дату и время" id="datetimepicker" value="<%= @datetime %>">
  </div>

  <div class="form-group">
    <label>Выбрать мастера</label>
    <select name="barber" class="form-control" value="<%= @barber %>">
      
      <%@barbers.each do |item|%>
        <option<%= @barber == item['Barber'] ? 'selected' : ''%>><%= item['Barber']%></option>
      <%end%>      
    
    </select>
  </div>

  <label>Выбрать цвет покраски</label>
  <select name="colorpicker" id="colorpicker">
      <option value="#7bd148">Green</option>
      <ption value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
  </select>

  <div>
    <button type="submit" class="btn btn-primary">Отправить</button>
  </div>
</form>

<script type="text/javascript">
  $(function(){
    $('#colorpicker').simplecolorpicker();
    $('#datetimepicker').datetimepicker();
  });
</script>
    